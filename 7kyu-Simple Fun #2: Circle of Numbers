JS

function circleOfNumbers(n, firstNumber) {
  const arr = [];
  for (let i = 0; i <= n - 1; i++) { arr.push(i) };
  const index = arr.indexOf(firstNumber);
  return (index > n / 2 - 1) ? index - n / 2 : index + n / 2;
}

Swift

func circleOfNumbers(_ n: Int, _ fst: Int) -> Int {
  return (fst + n / 2) % n
}
